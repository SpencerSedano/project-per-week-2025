                <Button BackgroundColor="Orange" BorderColor="Black" BorderWidth="1" HeightRequest="100" WidthRequest="100" FontSize="60" Clicked="EmojiHandler"/>
                <Button BackgroundColor="Orange" BorderColor="Black" BorderWidth="1" HeightRequest="100" WidthRequest="100" FontSize="60" Clicked="EmojiHandler"/>
                <Button BackgroundColor="Orange" BorderColor="Black" BorderWidth="1" HeightRequest="100" WidthRequest="100" FontSize="60" Clicked="EmojiHandler"/>
                <Button BackgroundColor="Orange" BorderColor="Black" BorderWidth="1" HeightRequest="100" WidthRequest="100" FontSize="60" Clicked="EmojiHandler"/>
                <Button BackgroundColor="Orange" BorderColor="Black" BorderWidth="1" HeightRequest="100" WidthRequest="100" FontSize="60" Clicked="EmojiHandler"/>
                <Button BackgroundColor="Orange" BorderColor="Black" BorderWidth="1" HeightRequest="100" WidthRequest="100" FontSize="60" Clicked="EmojiHandler"/>
                <Button BackgroundColor="Orange" BorderColor="Black" BorderWidth="1" HeightRequest="100" WidthRequest="100" FontSize="60" Clicked="EmojiHandler"/>
                <Button BackgroundColor="Orange" BorderColor="Black" BorderWidth="1" HeightRequest="100" WidthRequest="100" FontSize="60" Clicked="EmojiHandler"/>
                <Button BackgroundColor="Orange" BorderColor="Black" BorderWidth="1" HeightRequest="100" WidthRequest="100" FontSize="60" Clicked="EmojiHandler"/>
                <Button BackgroundColor="Orange" BorderColor="Black" BorderWidth="1" HeightRequest="100" WidthRequest="100" FontSize="60" Clicked="EmojiHandler"/>
                <Button BackgroundColor="Orange" BorderColor="Black" BorderWidth="1" HeightRequest="100" WidthRequest="100" FontSize="60" Clicked="EmojiHandler"/>
                <Button BackgroundColor="Orange" BorderColor="Black" BorderWidth="1" HeightRequest="100" WidthRequest="100" FontSize="60" Clicked="EmojiHandler"/>
            </FlexLayout>
        </VerticalStackLayout>
    </ScrollView>

